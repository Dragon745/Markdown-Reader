{
  "name": "markdown-reader-pro",
  "version": "1.0.5",
  "description": "A professional, cross-platform markdown reader built with Electron featuring modern UI/UX, syntax highlighting, and advanced features",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:prod": "npm run clean && electron-builder --publish=never",
    "build:win:prod": "npm run clean && electron-builder --win --publish=never",
    "build:mac:prod": "npm run clean && electron-builder --mac --publish=never",
    "build:linux:prod": "npm run clean && electron-builder --linux --publish=never",
    "clean": "rimraf dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "markdown",
    "reader",
    "viewer",
    "electron",
    "cross-platform",
    "desktop",
    "syntax-highlighting",
    "professional",
    "ui",
    "ux"
  ],
  "author": "Markdown Reader Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dragon745/Markdown-Reader.git"
  },
  "homepage": "https://github.com/Dragon745/Markdown-Reader#readme",
  "bugs": {
    "url": "https://github.com/Dragon745/Markdown-Reader/issues"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "marked": "^9.1.6",
    "highlight.js": "^11.9.0"
  },
  "build": {
    "appId": "com.markdownreaderpro.app",
    "productName": "Markdown Reader Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!*.md",
      "!package-lock.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Markdown Reader Pro"
    },
    "dmg": {
      "title": "Markdown Reader Pro",
      "icon": "assets/icon.png",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
